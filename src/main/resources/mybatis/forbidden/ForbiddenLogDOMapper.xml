<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.flagshen.myqq.database.forbidden.mapper.ForbiddenLogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="top.flagshen.myqq.database.forbidden.entity.ForbiddenLogDO">
        <id column="log_id" property="logId" />
        <result column="qq_num" property="qqNum" />
        <result column="group_num" property="groupNum" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        log_id, qq_num, group_num, create_time
    </sql>
    <select id="getJinyanCount" resultType="top.flagshen.myqq.database.forbidden.dto.JinYanCount">
        SELECT qq_num, COUNT(*) as count
        FROM forbidden_log
        <where>
            <if test="groupNum != null and groupNum != ''">
                and group_num = #{groupNum}
            </if>
        </where>
        GROUP BY qq_num
        ORDER BY count DESC
        LIMIT 0,10
    </select>

</mapper>
